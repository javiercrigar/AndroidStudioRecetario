<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearRecetas">

  <Button
      android:id="@+id/cre_bot_crear"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="84dp"
      android:layout_marginTop="83dp"
      android:text="@string/crear"
      app:layout_constraintStart_toEndOf="@+id/cre_bot_volver"
      app:layout_constraintTop_toBottomOf="@+id/cre_pasos" />

  <Button
      android:id="@+id/cre_bot_volver"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="44dp"
      android:layout_marginTop="83dp"
      android:text="@string/volver"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/cre_pasos" />

  <EditText
      android:hint="Titulo de la receta"
      android:id="@+id/cre_titulo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="64dp"
      android:layout_marginTop="74dp"
      android:ems="10"
      android:inputType="textPersonName"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:hint="Pasos de la receta"
      android:id="@+id/cre_pasos"
      android:layout_width="285dp"
      android:layout_height="254dp"
      android:layout_marginStart="39dp"
      android:layout_marginTop="35dp"
      android:layout_marginEnd="80dp"
      android:ems="10"
      android:gravity="start|top"
      android:inputType="textMultiLine"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/cre_titulo" />
</androidx.constraintlayout.widget.ConstraintLayout>