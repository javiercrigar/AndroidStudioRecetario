<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cam_imagen"
        android:layout_width="275dp"
        android:layout_height="304dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/cam_tomar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="24dp"
        android:text="Tomar imagen"
        app:layout_constraintStart_toEndOf="@+id/cam_imagen"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cam_buscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="36dp"
        android:text="Buscar Imagen"
        app:layout_constraintStart_toEndOf="@+id/cam_imagen"
        app:layout_constraintTop_toBottomOf="@+id/cam_tomar" />

    <Button
        android:id="@+id/cam_subir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="28dp"
        android:text="Subir imagen"
        app:layout_constraintBottom_toTopOf="@+id/cam_volver"
        app:layout_constraintStart_toEndOf="@+id/cam_imagen"
        app:layout_constraintTop_toBottomOf="@+id/cam_buscar" />

    <Button
        android:id="@+id/cam_volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginTop="28dp"
        android:text="Volver"
        app:layout_constraintStart_toEndOf="@+id/cam_imagen"
        app:layout_constraintTop_toBottomOf="@+id/cam_subir" />
</androidx.constraintlayout.widget.ConstraintLayout>